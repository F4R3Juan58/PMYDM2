<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="70dp">

    <!-- Botón para mostrar el primer fragmento -->
    <Button
        android:id="@+id/btnFirstFragment"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="First Fragment" />

    <!-- Botón para mostrar el segundo fragmento -->
    <Button
        android:id="@+id/btnSecondFragment"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Second Fragment" />

    <!-- Botón para mostrar el tercer fragmento -->
    <Button
        android:id="@+id/btnThirdFragment"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Third Fragment" />
   <!-- Contenedor para los fragmentos -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="32dp" />
</LinearLayout>
