<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!-- Contenedor de los Fragmentos -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!-- Botón para mostrar el fragmento de Video -->
    <Button
        android:id="@+id/botonVideoFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Vídeos"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp" />
    <!-- Botón para mostrar el fragmento de Audio -->
    <Button
        android:id="@+id/botonAudioFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escuchar Audios"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp" />
</RelativeLayout>
